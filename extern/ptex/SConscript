#!/usr/bin/python
import sys
import os

Import('env')

sources = ['src/glew.c']
sources = env.Glob('src/ptex/*.cpp')
sources += env.Glob('*.cpp')

defs = 'PTEX_STATIC'
incs = 'src/ptex'
incs += ' ' + env['BF_ZLIB_INC'] 

env.BlenderLib ( 'extern_ptex', sources, Split(incs), Split(defs), libtype=['extern','player'], priority=[50,230])
